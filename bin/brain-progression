#!/usr/bin/env php

<?php
require __DIR__ . '/../vendor/autoload.php'; // Подключаем автозагрузчик Composer

use BrainGames\Cli\Cli;
use BrainGames\Engine\Engine;

function generateProgression(int $length = 10): array
{
    $start = rand(1, 20);
    $step = rand(2, 5);
    $progression = [];
    for ($i = 0; $i < $length; $i++) {
        $progression[] = $start + $i * $step;
    }
    return $progression;
}

function playGame(string $userName, int $rounds = 3): void
{
    line('What number is missing in the progression?');

    for ($i = 0; $i < $rounds; $i++) {
        $progression = generateProgression(rand(5, 10));
        $hiddenIndex = array_rand($progression);
        $hiddenValue = $progression[$hiddenIndex];
        $progression[$hiddenIndex] = '..';
        $question = implode(' ', $progression);

        line("Question: {$question}");
        $answer = prompt('Your answer');

        if ((int) $answer === $hiddenValue) {
            line('Correct!');
        } else {
            line("'{$answer}' is wrong answer ;(. Correct answer was '{$hiddenValue}'.");
            line("Let's try again, {$userName}!");
            return;
        }
    }

    line("Congratulations, {$userName}!");
}

// Главная функция, которая запускает игру
function startGame()
{
    $cli = new Cli();
    $userName = $cli->greetUser();
    playGame($userName);
}

// Запускаем игру
startGame();