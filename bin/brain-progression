#!/usr/bin/env php

<?php
require __DIR__ . '/../vendor/autoload.php'; // Подключаем автозагрузчик Composer

use function BrainGames\Cli\greetUser; // Импортируем функцию greetUser

function generateProgression(int $length = 10): array
{
    $start = rand(1, 20);
    $step = rand(2, 5);
    $progression = [];
    for ($i = 0; $i < $length; $i++) {
        $progression[] = $start + $i * $step;
    }
    return $progression;
}

function playGame($userName): void
{
    echo ("What number is missing in the progression?\n");

    for ($i = 0; $i < 3; $i++) {
        $progression = generateProgression(rand(5, 10));
        $hiddenIndex = array_rand($progression);
        $hiddenValue = $progression[$hiddenIndex];
        $progression[$hiddenIndex] = '..';
        $question = implode(' ', $progression);

        echo ("Question: {$question}\n");
        echo "Your answer: ";
        $userAnswer = trim(fgets(STDIN));


        if ((int) $userAnswer === $hiddenValue) {
            echo ("Correct!\n");
        } else {
            echo ("'{$userAnswer}' is wrong answer ;(. Correct answer was '{$hiddenValue}'.\n");
            echo ("Let's try again, {$userName}!\n");
            return;
        }
    }

    echo ("Congratulations, {$userName}!\n");
}

// Главная функция, которая запускает игру
function startGame()
{
    $userName = greetUser(); // Вызываем функцию greetUser
    playGame($userName);
}

// Запускаем игру
startGame();